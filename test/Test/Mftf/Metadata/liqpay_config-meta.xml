                                    <object key="active" dataType="active">
                                        <field key="value">integer</field>
                                    </object>
                                    <object key="mode" dataType="mode">
                                        <field key="value">string</field>
                                    </object>
                                    <object key="connection_type" dataType="connection_type">
                                        <field key="value">string</field>
                                    </object>
                                    <object key="title" dataType="title">
                                        <field key="value">string</field>
                                    </object>
                                </object>
                            </object>
                            <object key="pronko_liqpay_account" dataType="liqpay_configuration">
                                <object key="fields" dataType="liqpay_configuration">
                                    <object key="sandbox_public_key" dataType="sandbox_public_key">
                                        <field key="value">string</field>
                                    </object>
                                    <object key="sandbox_private_key" dataType="sandbox_private_key">
                                        <field key="value">string</field>
                                    </object>
                                </object>
                            </object>
                        </object>
                    </object>
                </object>
            </object>
        </object>
    </operation>
